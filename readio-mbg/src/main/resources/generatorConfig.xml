<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="generator.properties"/>
    <context id="PostgreSQLContext" targetRuntime="MyBatis3" defaultModelType="flat">
        <!-- PostgreSQL 使用双引号作为标识符定界符 -->
        <property name="beginningDelimiter" value="&quot;"/>
        <property name="endingDelimiter" value="&quot;"/>
        <property name="javaFileEncoding" value="UTF-8"/>
        <!-- 为模型生成序列化方法-->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <!-- 为生成的Java模型创建一个toString方法 -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <!--生成mapper.xml时覆盖原文件-->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />
        <commentGenerator type="com.pool.readio.mbg.CommentGenerator">
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="${jdbc.driverClass}"
                        connectionURL="${jdbc.connectionURL}"
                        userId="${jdbc.userId}"
                        password="${jdbc.password}">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.pool.readio.mbg.model" targetProject="readio-mbg/src/main/java"/>

        <sqlMapGenerator targetPackage="com.pool.readio.mbg.mapper" targetProject="readio-mbg/src/main/resources"/>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.pool.readio.mbg.mapper"
                             targetProject="readio-mbg/src/main/java"/>
        <!-- 只生成 public schema 下的表，避免生成 PostgreSQL 系统表（pg_catalog.pg_*）-->
        <table schema="public" tableName="%">
            <!-- PostgreSQL IDENTITY 列使用 JDBC getGeneratedKeys -->
            <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
        </table>
    </context>
</generatorConfiguration>