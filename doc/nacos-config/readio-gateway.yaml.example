# 在 Nacos 中创建配置：Data ID = readio-gateway.yaml，Group = DEFAULT_GROUP，格式 = YAML

server:
  port: 8201
spring:
  application:
    name: readio-gateway
  main:
    web-application-type: reactive
  autoconfigure:
    exclude:
      - com.github.xiaoymin.knife4j.spring.gateway.Knife4jGatewayAutoConfiguration
  datasource:
    url: jdbc:postgresql://localhost:26001/readio?currentSchema=public
    username: readio
    password: readio
    driver-class-name: org.postgresql.Driver
  cloud:
    gateway:
      server:
        webflux:
          discovery:
            locator:
              enabled: true
              lower-case-service-id: true
          routes:
            - id: readio-auth
              uri: lb://readio-auth
              predicates:
                - Path=/readio-auth/**
              filters:
                - StripPrefix=1
            - id: readio-admin
              uri: lb://readio-admin
              predicates:
                - Path=/readio-admin/**
              filters:
                - StripPrefix=1
            - id: readio-portal
              uri: lb://readio-portal
              predicates:
                - Path=/readio-portal/**
              filters:
                - StripPrefix=1
            - id: readio-search
              uri: lb://readio-search
              predicates:
                - Path=/readio-search/**
              filters:
                - StripPrefix=1
    nacos:
      discovery:
        server-addr: localhost:8848
  data:
    redis:
      database: 0
      port: 26002
      host: localhost
      username: readio
      password: readio
secure:
  ignore:
    urls:
      - "/doc.html"
      - "/v3/api-docs/swagger-config"
      - "/*/v3/api-docs/default"
      - "/*/v3/api-docs"
      - "/*/swagger-ui/**"
      - "/webjars/**"
      - "/favicon.ico"
      - "/webjars/**"
      - "/actuator/**"
      - "/readio-auth/**"
      - "/readio-search/**"
      - "/readio-portal/sso/login"
      - "/readio-portal/sso/register"
      - "/readio-portal/sso/getAuthCode"
      - "/readio-portal/home/**"
      - "/readio-portal/product/**"
      - "/readio-portal/alipay/**"
      - "/readio-admin/admin/login"
      - "/readio-admin/admin/register"
      - "/readio-admin/minio/upload"
management:
  endpoints:
    web:
      exposure:
        include: '*'
  endpoint:
    health:
      show-details: always
    env:
      show-values: always
    configprops:
      show-values: always
    info:
      enabled: true
knife4j:
  gateway:
    enabled: true
    strategy: discover
    discover:
      version: openapi3
      enabled: true
      excluded-services: readio-monitor
    tags-sorter: order
    operations-sorter: order
sa-token:
  token-name: Authorization
  timeout: 2592000
  active-timeout: -1
  is-concurrent: true
  is-share: false
  token-style: uuid
  is-log: false
  is-read-cookie: false
  is-read-header: true
  token-prefix: Bearer
  is-print: false
